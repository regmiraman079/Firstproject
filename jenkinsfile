pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'develop',
                    url: 'https://github.com/regmiraman079/Firstproject.git',
                    credentialsId: 'github-credentials'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to localhost:8081/raman/regmi'
                // Add your deployment command here
            }
        }
    }
    post {
        failure {
            echo 'Build or Deployment failed!'
        }
    }
}
