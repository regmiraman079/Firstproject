pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven3', type: 'maven'
        PATH = "${MAVEN_HOME}\\bin;${env.PATH}"
        APP_NAME = "Firstproject"
        JAR_FILE = "target/raman-0.0.1-SNAPSHOT.jar"
        DOCKER_IMAGE = "firstproject:${env.BUILD_NUMBER}"
        HOST_PORT = "9090"  // Change if needed
        CONTAINER_PORT = "8080"
    }

    stages {
        stage('Checkout') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'github-credentials',
                    usernameVariable: 'GIT_USER',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    git url: "https://${GIT_USER}:${GIT_TOKEN}@github.com/regmiraman079/Firstproject.git",
                        branch: 'develop'
                }
            }
        }

        stage('Build') {
            steps {
                bat 'mvn -version'
                bat 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Run Docker Container') {
             steps {
                    echo 'Running Docker container locally...'
                    bat """
                    docker ps -q --filter "name=${APP_NAME}" > tmp.txt
                    for /F %%i in (tmp.txt) do (
                        docker stop %%i
                        docker rm %%i
                    )
                    del tmp.txt
                    docker run -d -p ${HOST_PORT}:${CONTAINER_PORT} --name ${APP_NAME} ${DOCKER_IMAGE}
                    """
                }
        }
    }

    post {
        success {
            echo "Build, Docker image, and deployment succeeded! App running at http://localhost:${HOST_PORT}"
        }
        failure {
            echo "Build or deployment failed!"
        }
    }
}
