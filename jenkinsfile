pipeline {
    agent any

    environment {
        APP_NAME = "Firstproject"
        JAR_FILE = "target/${APP_NAME}-0.0.1-SNAPSHOT.jar"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://your-git-repo-url.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building the application..."
                bat "mvn clean package"
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                bat "mvn test"
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying locally on port 8080..."
                bat "start cmd /k java -jar ${JAR_FILE}"
            }
        }
    }

    post {
        success {
            echo 'Build and deployment succeeded!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
